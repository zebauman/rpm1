<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="14dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

                <!-- Device Name -->
                <TextView
                    android:id="@+id/deviceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nucleo WB55 (Motor Controller)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/deviceRsi"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="8dp"/>

                <!-- RSSI badge (keeps your existing id: deviceRsi) -->
                <TextView
                    android:id="@+id/deviceRsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:backgroundTint="?attr/colorPrimary"
                    tools:text="-62 dBm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/deviceName"/>

                <!-- MAC Address -->
                <TextView
                    android:id="@+id/deviceAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="D0:39:72:AA:BC:1F"
                    app:layout_constraintTop_toBottomOf="@+id/deviceName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginTop="4dp"/>

                <!-- Last Seen -->
                <TextView
                    android:id="@+id/deviceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="seen 2s ago"
                    app:layout_constraintTop_toBottomOf="@+id/deviceAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
